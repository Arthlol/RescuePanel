@model MvcApplication1.Models.Operator

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Operator</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId, "Employee")
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserId", String.Empty)
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.WorkShift)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WorkShift)
            @Html.ValidationMessageFor(model => model.WorkShift)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MayWorkOvertime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MayWorkOvertime)
            @Html.ValidationMessageFor(model => model.MayWorkOvertime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HomePhone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomePhone)
            @Html.ValidationMessageFor(model => model.HomePhone)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <a href="javascript:history.back(1)">назад</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
